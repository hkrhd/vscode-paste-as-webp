{
  "name": "vsc-webp-paster",
  "displayName": "WebP Image Paster",
  "description": "Paste images as WebP format in Markdown files. Supports both Windows and macOS.",
  "version": "0.6.0",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "extensionKind": [
    "ui"
  ],
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#0078D4",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsc-webp-paster.pasteAsWebpInMd",
        "title": "Paste as WebP in MD"
      }
    ],
    "keybindings": [
      {
        "command": "vsc-webp-paster.pasteAsWebpInMd",
        "key": "ctrl+v",
        "mac": "cmd+v",
        "when": "editorTextFocus && !notebookEditorFocused && editorLangId == 'markdown'"
      }
    ],
    "configuration": {
      "title": "WebP Paster",
      "properties": {
        "vsc-webp-paster.imageDir": {
          "type": "string",
          "default": "img",
          "description": "%config.imageDir.description%"
        },
        "vsc-webp-paster.quality": {
          "type": "number",
          "default": 80,
          "minimum": 0,
          "maximum": 100,
          "description": "%config.quality.description%"
        },
        "vsc-webp-paster.namingConvention": {
          "type": "string",
          "default": "image-${timestamp}",
          "description": "%config.namingConvention.description%"
        },
        "vsc-webp-paster.insertPattern": {
          "type": "string",
          "default": "![${fileName}](${relativePath})",
          "description": "%config.insertPattern.description%"
        },
        "vsc-webp-paster.useWorkspaceRoot": {
          "type": "boolean",
          "default": false,
          "description": "%config.useWorkspaceRoot.description%"
        },
        "vsc-webp-paster.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "%config.debugMode.description%"
        },
        "vsc-webp-paster.progressDelay": {
          "type": "number",
          "default": 0.3,
          "description": "%config.progressDelay.description%"
        }
      }
    },
    "l10n": "./l10n"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "package:vsix": "npm run package && npx @vscode/vsce package --out build/",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "semantic-release": "semantic-release",
    "publish:all": "npx @vscode/vsce publish --target darwin-arm64 win32-x64 linux-x64 linux-arm64"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "25.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@napi-rs/clipboard": "^1.1.3",
    "sharp": "^0.34.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hkrhd/vscode-paste-as-webp.git"
  },
  "bugs": "https://github.com/hkrhd/vscode-paste-as-webp/issues",
  "homepage": "https://github.com/hkrhd/vscode-paste-as-webp#readme",
  "keywords": [
    "webp",
    "image",
    "paste",
    "markdown",
    "clipboard",
    "convert",
    "optimization"
  ],
  "publisher": "hkrhd"
}
